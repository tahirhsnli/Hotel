<!--Comments-->
@model CommentVM
<section style="background-color: #eee;">
    <div class="container my-5 py-5">
        <div class="row d-flex justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">
                    <div class="card-body">
                        <h3 class="mt-3 mb-4 pb-2">
                            Write your thoughts about the hotel and the room
                        </h3>
                    </div>
                    <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                        <form asp-controller="Room" asp-action="CreateComment">
                            <div class="d-flex flex-start w-100">
                                @*                           <img class="rounded-circle shadow-1-strong me-3"
                                src="https://mdbcdn.b-cdn.net/img/Photos/Avatars/img%20(19).webp" alt="avatar" width="40"
                                height="40" />*@
                                <div class="form-outline w-100">
                                    <label asp-for="Description" class="form-label" for="textAreaExample"></label>
                                    <textarea asp-for="Description" class="form-control" rows="4"
                                              style="background: #fff;" placeholder="Write of comments..."></textarea>
                                    <span asp-validation-for="Description"></span>
                                </div>
                                <input hidden asp-for="RoomId"/>
                                <input hidden asp-for="AppUserId"/>
                                <div asp-validation-summary="ModelOnly"></div>
                            </div>
                        <div class="float-end mt-2 pt-1">
                            <button type="submit" class="btn btn-primary btn-sm">Post comment</button>
                            <button type="button" class="btn btn-outline-primary btn-sm">Cancel</button>
                        </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>