@model SearchVM
<section class="section-padding bg-cream">
    <div class="container">
        <div class="section-subtitle">Check Now</div>
        <div class="section-title">Search Rooms</div>
        <div class="booking-inner clearfix">
            <form class="form1 clearfix" asp-action="Search" asp-controller="Room">
                <div class="col1 c1">
                    <div class="select1_wrapper">
                        <label>Adults</label>
                        <div class="select1_inner">
                            <select class="select2 select" asp-for="RoomTypeId" asp-items="new SelectList(Model.RoomTypes,nameof(RoomType.Id),nameof(RoomType.Name))">
                                <option>All RoomTypes</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col1 c2">
                    <div class="input1_wrapper">
                        <label>MinPrice</label>
                        <div class="input1_inner">
                            <input asp-for="Minprice" type="text" class="form-control input text" placeholder="Min Price">
                        </div>
                    </div>
                </div>
                <div class="col1 c2">
                    <div class="select1_inner">
                        <label>Max Price</label>
                        <div class="input1_inner">
                            <input asp-for="Maxprice" type="text" class="form-control input text" placeholder="Max Price">
                        </div>
                    </div>
                </div>
                <div class="col1 c3">
                    <div class="input1_wrapper">
                        <label>Check in</label>
                        <div class="input1_inner">
                            <input asp-for="PeopleCapacity" type="text" class="form-control input text" placeholder="People Capacity">
                        </div>
                    </div>
                </div>
                <div class="col1 c3">
                    <div class="select1_inner">
                        <label>Check out</label>
                        <div class="input1_inner">
                            <input asp-for="ChildrenCapacity" type="text" class="form-control input text" placeholder="Children Capacity">
                        </div>
                    </div>
                </div>
                <div class="col1 c3">
                    <div class="input1_wrapper">
                        <label>Start date</label>
                        <div class="input1_inner">
                            <input asp-for="StartDate" type="text" asp-format="{0:dd/MM/yyyy}" class="form-control input" placeholder="Check in">
                            <span asp-validation-for="StartDate"></span>
                        </div>
                    </div>
                </div>
                <div class="col1 c3">
                    <div class="input1_wrapper">
                        <label>End Date</label>
                        <div class="input1_inner">
@*                            <input asp-for="EndDate" type="text" class="form-control input datepicker" placeholder="Check out">*@
                            <input asp-for="EndDate" type="text " asp-format="{0:dd/MM/yyyy}" class="form-control input" placeholder="Check out"/>
                            <span asp-validation-for="EndDate"></span>
                        </div>
                    </div>
                </div>
@*                <div class="col1 c3">
                    <div class="input1_wrapper">
                        <label>Check in</label>
                        <div class="input1_inner">
                            <input asp-for="Startdate" type="text" class="form-control input datepicker" placeholder="Check in">
                        </div>
                    </div>
                </div>
                <div class="col1 c4">
                    <div class="input1_wrapper">
                        <label>Check out</label>
                        <div class="input1_inner">
                            <input asp-for="Enddate" type="text" class="form-control input datepicker" placeholder="Check out">
                        </div>
                    </div>
                </div>*@
@*                <div class="col1 c2">
                    <div class="input1_wrapper">
                        <label>Check in</label>
                        <div class="input1_inner">
                            <input type="text" class="form-control input datepicker" placeholder="Check in">
                        </div>
                    </div>
                </div>
                <div class="col1 c3">
                    <div class="input1_wrapper">
                        <label>Check out</label>
                        <div class="input1_inner">
                            <input type="text" class="form-control input datepicker" placeholder="Check out">
                        </div>
                    </div>
                </div>
                <div class="col2 c4">
                    <div class="select1_wrapper">
                        <label>Adults</label>
                        <div class="select1_inner">
                            <select class="select2 select" style="width: 100%">
                                <option value="1">1 Adult</option>
                                <option value="2">2 Adults</option>
                                <option value="3">3 Adults</option>
                                <option value="4">4 Adults</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col2 c5">
                    <div class="select1_wrapper">
                        <label>Children</label>
                        <div class="select1_inner">
                            <select class="select2 select" style="width: 100%">
                                <option value="1">Children</option>
                                <option value="1">1 Child</option>
                                <option value="2">2 Children</option>
                                <option value="3">3 Children</option>
                                <option value="4">4 Children</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col2 c6">
                    <div class="select1_wrapper">
                        <label>Rooms</label>
                        <div class="select1_inner">
                            <select class="select2 select" style="width: 100%">
                                <option value="1">1 Room</option>
                                <option value="2">2 Rooms</option>
                                <option value="3">3 Rooms</option>
                                <option value="4">4 Rooms</option>
                            </select>
                        </div>
                    </div>
