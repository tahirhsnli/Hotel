
@{
    ViewData["Title"] = "Create";
}
@model EmployeeVM
<div class="content container-fluid">
	<div class="page-header">
		<div class="row align-items-center">
			<div class="col">
				<h3 class="page-title mt-5">Add Employee</h3>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<form asp-action="Create" enctype="multipart/form-data">
				<div class="row formtype">
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="Name">Name</label>
							<input asp-for="Name" class="form-control" type="text">
							<span asp-validation-for="Name"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="Surname">Surname</label>
							<input asp-for="Surname" class="form-control" type="text">
							<span asp-validation-for="Surname"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="Age">Age</label>
							<input asp-for="Age" class="form-control" type="text">
							<span asp-validation-for="Age"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="Phone">Phone Number</label>
							<input asp-for="Phone" class="form-control" type="text">
							<span asp-validation-for="Phone"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="ProfessionId">Profession</label>
							<select asp-for="ProfessionId" class="form-control" asp-items="new SelectList(ViewBag.Profession,nameof(Profession.Id),nameof(Profession.Name))"></select>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="ImageFile">Image</label>
							<input asp-for="ImageFile" class="form-control" accept="image/*">
							<span asp-validation-for="ImageFile"></span>
						</div>
					</div>
					<div asp-validation-summary="ModelOnly"></div>
				</div>
				<button type="submit" class="btn btn-primary buttonedit ml-2">Add Employee</button>
				<button class="btn btn-primary"><a asp-action="Index">Cancel</a></button>
			</form>
		</div>
	</div>
</div>