
@{
    ViewData["Title"] = "Edit";
}
@model ProfessionVM
<div class="content container-fluid">
    <div class="page-header">
        <div class="row align-items-center">
            <div class="col">
                <h3 class="page-title mt-5">Edit Profession</h3>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <form asp-action="Edit">
                <div class="row formtype">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" class="form-control" type="text" placeholder="Name">
                            <span asp-validation-for="Name"></span>
                        </div>
                        <div asp-validation-summary="ModelOnly"></div>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary buttonedit">Save</button>
                <button class="btn btn-light"><a asp-action="Index">Cancel</a></button>
            </form>
        </div>
    </div>
</div>