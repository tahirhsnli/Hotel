
@{
    ViewData["Title"] = "Edit";
}
@model Room
<div class="content container-fluid">
	<div class="page-header">
		<div class="row align-items-center">
			<div class="col">
				<h3 class="page-title mt-5">Edit Room</h3>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-lg-12">
			<form asp-action="Edit" enctype="multipart/form-data">
				<div class="row formtype">
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="RoomNumber">Room Number</label>
							<input asp-for="RoomNumber" class="form-control" type="text">
							<span asp-validation-for="RoomNumber"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="RoomPrice">Room Price</label>
							<input asp-for="RoomPrice" class="form-control" type="text">
							<span asp-validation-for="RoomPrice"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="RoomTypeId">Room Type</label>
							<select asp-for="RoomTypeId" class="form-control" asp-items="new SelectList(ViewBag.RoomType,nameof(RoomType.Id),nameof(RoomType.Name))"></select>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="PeopleCapacity">People Capacity</label>
							<input asp-for="PeopleCapacity" class="form-control" type="text">
							<span asp-validation-for="PeopleCapacity"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="ChildrenCapacity">Children Capacity</label>
							<input asp-for="ChildrenCapacity" class="form-control" type="text">
							<span asp-validation-for="ChildrenCapacity"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="Area">Area</label>
							<input asp-for="Area" type="text" class="form-control" />
							<span asp-validation-for="Area"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="MainFile">Image</label>
							<input asp-for="MainFile" class="form-control" accept="image/*" />
							<span asp-validation-for="MainFile"></span>
						</div>
					</div>
					<div class="col-md-4">
						<div class="form-group">
							<label asp-for="Files">Images</label>
							<input asp-for="Files" class="form-control" accept="image/*" />
							<span asp-validation-for="Files"></span>
						</div>
					</div>
					<div asp-validation-summary="ModelOnly"></div>
					<button type="submit" class="btn btn-primary buttonedit ml-2">Save</button>
					<button class="btn btn-primary buttonedit"><a asp-action="Index"></a>Cancel</button>
				</div>
			</form>
			<div class="col-md-4">
				@foreach (var item in Model.RoomImages.Where(x => x.IsMain == false))
				{
					<form asp-action="DeleteImage" asp-route-id="@item.Id" asp-route-id="@Model.Id">
						<img height="150px" src="~/assets/img/room/@item.Image" />
						<div style="position:relative">
							<button type="submit" class="bg-danger text-white" style="position:absolute;right:1px;bottom:75px">x</button>
						</div>
					</form>
				}
			</div>
		</div>
	</div>
</div>